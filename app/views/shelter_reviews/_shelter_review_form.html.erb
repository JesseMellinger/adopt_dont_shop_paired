<%= form_tag path, method: method do %>
  <%= label_tag :title %>
  <%= text_field_tag :title, title %>

  <%= label_tag :rating %>
  <%= text_field_tag :rating, rating %>

  <%= label_tag :picture %>
  <%= text_field_tag :picture, picture %>

  <%= label_tag :content %>
  <%= text_field_tag :content, content %>

  <%= label_tag :name %>
  <%= text_field_tag :name, name %>

  <%= submit_tag submit_text %>
<% end %>
